<section>
    <div class="container">
    <h2>Nytt highscore</h2>

    <form method="post" >
        <div class="form-group col-6 my-3">
            <label for="game">Spel</label>
            <select name="game" class="form-control" id="game">
                <% gameList.forEach(game => { %>
                     <option value="<%= game.id %>"><%= game.name %> </option>
                <% }) %>
            </select>
        </div>
       
        <div class="form-group col-6 my-3">
            <label for="playerName">Spelare</label>
            <input type="text" class="form-control" name="playerName">
        </div>
        
        <div class="form-group col-6 my-3">
            <label for="scoreDate">Datum</label>
            <input type="date" class="form-control" name="scoreDate">
        </div>

        <div class="form-group col-6 my-3">
            <label for="score">Poäng</label>
            <input type="number" class="form-control" name="score">
        </div>
        
        <button>Lägg till</button>
    </form>

</div>
</section>