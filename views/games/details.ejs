<section class="row mb-4">
  <div class="container">
    <div class="row">
      <img src="<%= game.image_url %>" class="d-block col-5" alt="" />
      
      <div class="col-7">
        <h1 class="mb-3"><%= game.name %></h1>
        <div class="mb-3"><%= game.release_year %>, <%= game.genre %></div>
        <div class="mb-3"><%= game.description %></div>
      </div>

    </div>
  </div>
 
  <!-- <div>
    <h3 class="text-center mt-4">Highscores</h3>
    <% highscore.forEach(highscores => {   %>
      <p>Test</p>
    <% }) %>

  </div>  -->

  <div>
    <h3 class="text-center mt-4">Highscores</h3>
    <% highscore.forEach(highscores => {   %>
    <div class="row border border-2 border-dark mx-2 mb-1 p-3">
      <div class="col fs-5">
        
        <p><small> <%= highscores.game %> </small><%= highscores.player_name %>, <% const scoreDate = new Date (highscores.score_date); %> <%=scoreDate.toLocaleDateString('se-SE'); %></p>
      </div>
      <div class="col text-end fs-5">
        <p><%= highscores.score %></p>
      </div>
    </div>
    <% }) %>

  </div> 

  
</section>

